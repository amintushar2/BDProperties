        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">
            <TextView
                android:id="@+id/propetyTableRaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PropertyType :"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/propertysetTableRaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">
            <TextView
                android:id="@+id/bedRoomTableRaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BedRoom"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/bedRoomsetTableRaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">
            <TextView
                android:id="@+id/bathrromTableRaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WashRoom"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/bathRoomsetTableRaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">
            <TextView
                android:id="@+id/bvarandaTableRaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WashRoom"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/varandasetTableRaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">
            <TextView
                android:id="@+id/drawingaTableRaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drawing and Dining"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/drawingsetTableRaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">
            <TextView
                android:id="@+id/ParkingTableRaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parking"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/dparkingTableRaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes" />
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/table2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tavle1"
        android:padding="4dp"
        tools:layout_editor_absoluteX="0dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">
            <TextView
                android:id="@+id/oenerNameTableRaw"
                android:layout_width="wrap_content"
