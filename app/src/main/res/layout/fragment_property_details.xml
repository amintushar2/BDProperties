                android:text="Owner Name            "
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
